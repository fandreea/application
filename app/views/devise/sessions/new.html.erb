<div class="login-container">
    <h2>Please sign in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div class="field">
        <%= f.email_field :email, autofocus: true, :class => 'form-control login-field', :placeholder => 'User name'%>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", :class => 'form-control login-field', :placeholder => 'Password' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field login-remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Sign in", :class => 'btn btn-lg btn-primary btn-block' %>
      </div>
    <% end %>
</div>
